<div id="user-aside" class="min-h-screen h-auto w-full flex flex-col items-center">
  <div class="w-full sticky top-0 bg-gray-50 z-50">
    <div class="w-44 mt-10 mx-auto">
      <%= render 'shared/search_link' %>
    </div>
    <section class="h-28 w-full px-6 mt-8 bg-gray-50 flex flex-col justify-start space-y-1 text-center">
      <h1 class="text-md text-gray-600 e-font">Notification</h1>
      <div id="user-notification">
        <%= render 'shared/user_notification' %>
      </div>
    </section>
    <h1 class="w-full pt-4 text-md bg-gray-50 text-gray-600 text-center e-font">Recommendation</h1>
  </div>
  <section class='w-full flex flex-col justify-center items-center space-y-1 pt-4'>
    <div id="user-recommendation" class="px-2">
      <%= render partial: 'shared/recommended_offer', collection: @recommended_offers, as: :offer %>
    </div>
  </section>
  <div class="pb-4 mt-auto">
    <%= render 'shared/copyright' %>
  </div>
</div>
