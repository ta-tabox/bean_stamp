<% provide(:title, "Home") %>
<div class="min-h-screen">
  <div class="top-background relative">
    <%= render 'layouts/static_pages_nav' %>
    <div  class="opacity-60 top-0 inset-x-0">
      <%= render 'layouts/flash_messages' %>
    </div>
    <div class="container items-center justify-center flex flex-col absolute top-1/2 left-1/2 lg:left-2/3 transform -translate-y-1/3 sm:-translate-y-1/2 -translate-x-1/2">
      <div class="items-center justify-center w-full p-8 flex flex-col">
        <div class="w-11/12 md:w-96 bg-gray-100 items-center justify-center shadow-md p-5 h-auto rounded-lg  bg-opacity-80 flex flex-col col-span-12">
          <hr class="w-48 border-2 border-solid border-indigo-500">
          <h2 class="mt-8 sm:mt-20 text-yellow-800 text-sm sm:text-lg text-center">あなたにとっての一杯のコーヒー<br>
            探していきませんか？</h2>
          <h1 class="text-gray-800 text-3xl sm:text-5xl text-center mt-2 mb-4 sm:mb-10 font-bold logo-font">Bean Stamp</h1>
          <%= link_to '登録する', new_user_registration_path , class: "text-center hover:text-gray-300 bg-yellow-800 text-white hover:bg-black w-40 sm:w-56 p-4 text-2xl font-medium rounded btn-pop" %>
          <div class="py-4 sm:y-8 flex flex-col md:flex-row md:space-x-4 space-y-2 md:space-y-0">
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary btn-pop" %>
            <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "btn btn-secondary btn-pop" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
