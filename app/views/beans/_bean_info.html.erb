<%# コーヒー豆詳細情報 %>
<section class="card text-gray-600">
  <h1 class="w-11/12 mx-auto text-center pb-2 text-gray-900 text-xl lg:text-2xl title-font"><%= bean.name %></h1>
  <div class="w-11/12 mx-auto flex flex-col justify-center items-center">
    <%# カルーセル %>
    <%= render partial:'beans/images_swiper', locals: { bean: bean, cls: "w-full lg:w-10/12 h-64 lg:h-96" } %>
    <div class="text-center lg:w-10/12 w-full pt-4">
      <p class="leading-relaxed"><%= bean&.describe %></p>
      <section class= "w-11/12 mx-auto pt-4">
        <div class="text-center text-lg e-font">〜 Flavor 〜</div>
        <div class="pt-2 flex justify-center space-x-3">
          <%bean.taste_tags.each do |taste_tag|%>
            <%= tag.div taste_tag.name, class: 'rounded-full py-1 px-4 border bg-white border-gray-300 text-center font-normal text-gray-500 text-sm ' if taste_tag.id?%>
          <%end%>
        </div>
      </section>
      <section class= "pt-4 grid-container grid-cols-2">
        <div class="col-span-2 mb-2 text-lg e-font">〜 Detail 〜</div>
        <div class="grid-item">
          <span class="text-gray-500">生産国</span>
          <span class="ml-auto text-gray-900"><%= bean&.country %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">焙煎度</span>
          <span class="ml-auto text-gray-900"><%= bean.roast_level&.name %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">地域</span>
          <span class="ml-auto text-gray-900"><%= bean&.subregion %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">農園</span>
          <span class="ml-auto text-gray-900"><%= bean&.farm %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">品種</span>
          <span class="ml-auto text-gray-900"><%= bean&.variety %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">精製方法</span>
          <span class="ml-auto text-gray-900"><%= bean&.process %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">標高</span>
          <span class="ml-auto text-gray-900"><%= "#{bean&.elevation} m" %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">収穫</span>
          <span class="ml-auto text-gray-900"><%= "#{bean.cropped_at&.year}年 #{bean.cropped_at&.month}月" %></span>
        </div>
      </section>
      <section class= "pt-4 grid grid-cols-2 lg:grid-cols-3 content-between">
        <div class="col-span-2 lg:col-span-3 mb-2 text-lg e-font">〜 Taste 〜</div>
        <div class="grid-item">
          <span class="text-gray-500">酸味</span>
          <span class="ml-auto text-gray-900"><%= bean&.acidity %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">香り</span>
          <span class="ml-auto text-gray-900"><%= bean&.flavor %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">ボディ</span>
          <span class="ml-auto text-gray-900"><%= bean&.body %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">苦味</span>
          <span class="ml-auto text-gray-900"><%= bean&.bitterness %></span>
        </div>
        <div class="grid-item">
          <span class="text-gray-500">甘味</span>
          <span class="ml-auto text-gray-900"><%= bean&.sweetness %></span>
        </div>
      </section>
    </div>
  </div>
</section>
