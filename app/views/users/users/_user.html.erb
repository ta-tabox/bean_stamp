<%# ユーザー一覧のアイテム %>
<%= link_to user do %>
  <li id="user-<%= user.id %>" class="flex flex-col items-center justify-between p-4 duration-300 border-b border-gray-100 sm:border-0 sm:flex-row sm:py-4 px-4 sm:px-8 hover:bg-gray-100">
    <div class="w-full flex items-center text-center flex-col sm:flex-row sm:text-left overflow-hidden">
      <div class="mb-2.5 sm:mb-0 sm:mr-4 flex-none">
        <%= show_thumbnail(user) %>
      </div>
      <div class="w-full flex flex-col mb-4 sm:mb-0 sm:mr-4 overflow-hidden">
        <p class="font-medium truncate"><%= user.name %><span class="ml-3">＠<%=  user.prefecture.name %></span></p>
        <p class="truncate text-gray-500"><%= user.describe %></p>
      </div>
    </div>
  </li>
<% end %>
