<%# ユーザー一覧のアイテム %>
<%= link_to user do %>
  <li id="user-<%= user.id %>" class="flex flex-col items-center justify-between p-4 duration-300 border-b border-gray-100 sm:border-0 sm:flex-row sm:py-4 sm:px-8 hover:bg-gray-100">
    <div class="flex items-center text-center flex-col sm:flex-row sm:text-left">
      <div class="mb-2.5 sm:mb-0 sm:mr-4">
        <%= show_thumbnail(user) %>
      </div>
      <div class="flex flex-col mb-4 sm:mb-0 sm:mr-4">
        <p class="font-medium"><%= user.name %><span class="ml-3">＠<%=  user.prefecture.name %></span></p>
      </div>
    </div>
  </li>
<% end %>
