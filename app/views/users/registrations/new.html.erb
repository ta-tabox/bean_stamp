<% provide(:title, "サインアップ") %>
<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name%><br />
    <%= f.text_field :name, autofocus: true, placeholder: "例）豆　太郎", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "例）beans@example.com", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.label :area %><br />
    <%= f.text_field :area, placeholder: "例）東京都", class: "input-field" %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "input-field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
