<% provide(:title, "パスワード再設定") %>
<div class="fixed inset-0 flex items-center">
  <div class="form-container">
    <div class="form-main">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <h1 class="form-title">パスワード再設定</h1>
        <%= render "shared/error_messages", resource: f.object %>
        <%= f.hidden_field :reset_password_token %>
        <%# パスワードフィールド %>
        <div class="input-container">
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"新しいパスワード(#{@minimum_password_length}文字以上)", class: "input-field" %>
          <div class="input-icon-field">
            <i class="fa-solid fa-unlock"></i>
          </div>
        </div>
        <%# パスワード確認フィールド %>
        <div class="input-container">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード(確認)", class: "input-field" %>
          <div class="input-icon-field">
            <i class="fa-solid fa-unlock"></i>
          </div>
        </div>
        <div class="form-button-field mt-4">
          <%= link_to "キャンセル", root_path, class: "mr-3 btn btn-secondary btn-pop", data: { confirm: '入力中のデータは削除されます。キャンセルしますか？'} %>
          <%= f.submit "変更", class: "btn btn-primary btn-pop" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
