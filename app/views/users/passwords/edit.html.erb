<% provide(:title, "パスワード再設定") %>
<div class="form-container">
  <div class="form-main">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <h1 class="form-title">パスワード再設定</h1>
      <%= render "shared/error_messages", resource: f.object %>
      <%= f.hidden_field :reset_password_token %>
      <%# パスワードフィールド %>
      <div class="input-container">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"新しいパスワード(#{@minimum_password_length}文字以上)", class: "input-field" %>
        <div class="input-icon-field">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"  fill="currentColor">
            <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z"/>
          </svg>
        </div>
      </div>
      <%# パスワード確認フィールド %>
      <div class="input-container">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード(確認)", class: "input-field" %>
        <div class="input-icon-field">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"  fill="currentColor">
            <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z"/>
          </svg>
        </div>
      </div>
      <div class="form-button-field mt-4">
        <%= link_to "キャンセル", root_path, class: "mr-3 btn-secondary btn-pop", data: { confirm: '入力中のデータは削除されます。キャンセルしますか？'} %>
        <%= f.submit "変更", class: "btn-primary btn-pop" %>
      </div>
    <% end %>
  </div>
</div>
