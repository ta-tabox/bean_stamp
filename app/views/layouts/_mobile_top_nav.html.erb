<div class="h-14 fixed top-0 inset-x-0 z-40 border-b border-gray-100 bg-gray-50">
  <div class="h-full flex items-center justify-between">
    <!-- TOPアイコン -->
    <div class="pl-8">
      <div><%= link_to 'Beans!', root_path %></div>
    </div>
    <!-- 切り替えアイコン -->
    <% if current_user.roaster&.id? %>
      <div id="top-toggle" class="pr-8 relative">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white absolute top-3 left-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
        </svg>
        <% if cookies[:roaster_id] %>
          <%= link_to User, home_users_path, class: "toggle_btn btn-primary pl-8"%>
        <% else %>
          <%= link_to Roaster, home_roasters_path, class: "toggle_btn btn-primary pl-8"%>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
