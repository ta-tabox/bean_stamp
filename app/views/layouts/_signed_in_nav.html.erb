<ul class="flex flex-col">
  <%# ホームリンク %>
  <li class="mb-2">
    <%= link_to home_users_path do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <div class="side-nav-text ml-2">home</div>
      </div>
    <% end %>
  </li>
  <%# マイページリンク %>
  <li class="mb-2">
    <%= link_to current_user do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <div class="side-nav-text ml-2">user</div>
      </div>
    <% end %>
  </li>
  <%# フォローリンク %>
  <li class="mb-2">
    <%= link_to following_user_path(current_user) do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
        <div class="side-nav-text ml-2">follow</div>
      </div>
    <% end %>
  </li>
  <%# ウォンツリンク %>
  <li class="mb-2">
    <%= link_to wants_path do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        <div class="side-nav-text ml-2">wants</div>
      </div>
    <% end %>
  </li>
  <%# お気に入りリンク %>
  <li class="mb-2">
    <%= link_to '#' do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        <div class="side-nav-text ml-2">likes</div>
      </div>
    <% end %>
  </li>
  <%# 検索リンク %>
  <li class="mb-2">
    <%= link_to '#' do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <div class="side-nav-text ml-2">search</div>
      </div>
    <% end %>
  </li>
  <% if current_user.roaster_id? %>
    <%# ロースターページリンク %>
    <li class="mb-2">
      <%= link_to roaster_path(current_user.roaster) do %>
        <div class="side-nav-item group flex items-end">
          <svg xmlns="http://www.w3.org/2000/svg"  class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-coffee">
            <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
            <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
            <line x1="6" y1="1" x2="6" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line>
          </svg>
          <div class="side-nav-text ml-2">roaster</div>
        </div>
      <% end %>
    </li>
    <%# ビーンズリンク %>
    <li class="mb-2">
      <%= link_to beans_path do %>
        <div class="side-nav-item group flex items-end">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 transform -rotate-45" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="side-nav-text ml-2">beans</div>
        </div>
      <% end %>
    </li>
    <%# オファーリンク %>
    <li class="mb-2">
      <%= link_to offers_path do %>
        <div class="side-nav-item group flex items-end">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
          <div class="side-nav-text ml-2">offers</div>
        </div>
      <% end %>
    </li>
  <% end %>
  <%# ヘルプリンク %>
  <li class="mb-2">
    <%= link_to help_path do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="side-nav-text ml-2">help</div>
      </div>
    <% end %>
  </li>
  <%# ログアウトリンク %>
  <li class="mb-2">
    <%= link_to destroy_user_session_path do %>
      <div class="side-nav-item group flex items-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <div class="side-nav-text ml-2">log out</div>
      </div>
    <% end %>
  </li>
</ul>
