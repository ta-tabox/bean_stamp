<div class="min-h-screen w-full sticky flex flex-col justify-between items-center top-0 z-50 border-r border-gray-100">
  <!-- TOPアイコン -->
  <div class="mx-8 mt-12 pb-8 text-center">
    <div><%= link_to 'Beans!', root_path %></div>
  </div>
  <div class="w-12 mx-auto">
    <hr class="border-gray-200">
  </div>
  <!-- ナビアイコン -->
  <div class="ml-14">
    <%= render 'layouts/signed_in_nav' %>
  </div>
  <div class="w-12 mx-auto">
    <hr class="border-gray-200">
  </div>
  <!-- 切り替えアイコン -->
  <% if current_user.roaster.id? %>
    <div class="mb-8 pt-8">
      <% if cookies[:roaster_id] == nil %>
        <%= link_to home_roasters_path do %>
          ロースターに切り替え
        <% end %>
      <% else %>
        <%= link_to home_users_path do %>
          ユーザーに切り替え
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
