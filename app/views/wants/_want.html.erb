<!-- wants一覧用 -->
<article id="want-<%= want.id %>" class="pb-4">
  <div class="w-11/12 px-8 py-4 mx-auto mt-16 bg-white rounded-lg shadow-lg">
    <div class="flex justify-center -mt-16 md:justify-end items-end">
      <%= show_thumbnail(want.roaster) %>
    </div>
    <div class="flex justify-between">
      <div class="font-semibold mb-4 <%=want.offer.status%>"><%= want.offer.status_i18n %></div>
      <h2 class="text-md title-font text-gray-500 tracking-widest hover:text-gray-800"><%= link_to want.roaster.name, want.roaster %></h2>
    </div>
    <div class="md:flex items-baseline">
      <h1 class="md:mt-2 text-xl lg:text-2xl font-semibold text-gray-800 dark:text-white lg:mt-0 lg:text-3xl"><%= want.bean.name %></h1>
      <div class="text-right"><%= link_to '詳細', want_path(want), class: "link ml-4" %></div>
    </div>
    <section class= "mt-4 mx-auto lg:grid grid-cols-2 content-between">
      <div class="flex w-11/12 mx-auto border-t border-gray-200 py-2">
        <span class="text-gray-500">生産国</span>
        <span class="ml-auto text-gray-900"><%= want.bean&.country %></span>
      </div>
      <div class="flex w-11/12 mx-auto lg:ml-4 border-t border-gray-200 py-2">
        <span class="text-gray-500">焙煎度</span>
        <span class="ml-auto text-gray-900"><%= want.bean.roast_level&.name %></span>
      </div>
      <div class="flex w-11/12 mx-auto border-t border-gray-200 py-2">
        <span class="text-gray-500">精製方法</span>
        <span class="ml-auto text-gray-900"><%= want.bean&.process %></span>
      </div>
      <div class="col-start-1 flex w-11/12 mx-auto border-t border-gray-200 py-2">
        <span class="text-gray-500">オファー終了日</span>
        <span class="ml-auto text-gray-900"><%= l want.offer&.ended_at, format: :long %></span>
      </div>
      <div class="flex w-11/12 mx-auto lg:ml-4 border-t border-gray-200 py-2">
        <span class="text-gray-500">ロースト日</span>
        <span class="ml-auto text-gray-900"><%= l want.offer&.roasted_at, format: :long  %></span>
      </div>
      <div class="flex w-11/12 mx-auto border-t border-gray-200 py-2">
        <span class="text-gray-500">受け取り開始日</span>
        <span class="ml-auto text-gray-900"><%= l want.offer&.receipt_started_at, format: :long  %></span>
      </div>
      <div class="flex w-11/12 mx-auto lg:ml-4 border-t border-gray-200 py-2">
        <span class="text-gray-500">受け取り終了日</span>
        <span class="ml-auto text-gray-900"><%= l want.offer&.receipt_ended_at, format: :long  %></span>
      </div>
      <div class="col-span-2 w-11/12 lg:w-full mx-auto pr-2 flex justify-end">
        <%= render partial:'offers/price_weight', locals: { offer: want.offer } %>
      </div>
    </section>
  </div>
</article>
