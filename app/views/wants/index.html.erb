<% provide(:title, "ウォンツ") %>
<header class="header">
  <div class="h-full w-11/12 mx-auto flex justify-between items-end">
    <h1 class="page-title">ウォンツ</h1>
    <div class="text-left">
      <%= form_with(url: search_wants_path, method: :get, local: true)do |f| %>
        <div class="flex">
          <%= image_tag("search.svg", class:'h-4 w-4') %>
          <%= f.label :search, "ウォンツを検索", class: "label pl-1" %>
        </div>
        <%= f.select :search, Offer.statuses.map {|k, v| [t("enums.offer.status.#{k}"), v]}, {include_blank: 'ステータスを選択'}, class: 'sort-box mr-2' %>
        <%= f.submit "検索", class: "btn-primary"  %>
      <% end %>
    </div>
  </div>
</header>
<section class="mt-4">
  <% if @wants.any? %>
    <ol>
      <%= render partial: 'wants/want', collection: @wants %>
    </ol>
    <%== pagy_nav_js(@pagy) %>
  <% end %>
</section>
<% content_for :aside do%>
  <% render partial: 'shared/user_aside' %>
<% end %>
