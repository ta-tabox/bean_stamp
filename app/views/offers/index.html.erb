<% provide(:title, "オファー一覧") %>
<h1 class="mb-1">オファ一覧</h1>
<hr class="mb-3">
<div class="container">
  <%= link_to "コーヒー豆一覧", beans_path, class: "mr-4 mb-8 btn-primary" %>
  <div class="form form-container">
    <%= search_form_for(@q, class: "mb-4") do |f| %>
      <div class="field">
        <%= f.label :price_lteq, '金額' , class: "label" %>
        <%= f.search_field :price_lteq, class: "input-field" %>
        <%= f.submit '検索', class: "btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="w-200 pt-12 mx-auto">
    <% if @offers.any? %>
      <ol>
        <%= render @offers %>
      </ol>
      <%== pagy_nav_js(@pagy) %>
    <% end %>
  </div>
</div>
