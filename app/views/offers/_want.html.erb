<%= form_with(model: [offer, current_user.wants.build], local: false) do |f| %>
  <div><%= hidden_field_tag :offer_id, offer.id %></div>
  <% if offer.wants.count < offer.amount %>
    <%= f.submit "Want", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Want", disabled: 'disabled', class: "btn btn-disabled" %>
  <% end %>
<% end %>
