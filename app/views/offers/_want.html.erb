<%= form_with(model: [offer, current_user.wants.build], local: false) do |f| %>
  <div><%= hidden_field_tag :offer_id, offer.id %></div>
  <% if offer.wants.count < offer.amount && offer.ended_at >= Date.current %>
    <%= f.button type:"submit", id:"want-button" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% end %>
  <% else %>
    <%= f.button type:"submit", disabled: 'disabled', id:"want-button", class:"cursor-not-allowed" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% end %>
  <% end %>
<% end %>
